<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <h3>Edit list</h3>
    <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"  class="needs-validation" novalidate >
        <div class="mb-3">
            <label for="title" class="form-lebel">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text"    class="form-control"  required>
            <div class="valid-feedback">Nice tittle</div>
            </div>
        <div class="mb-3">
            <label for="country" class="form-lebel">Country</label>
            <input name="listing[country]" value="<%= listing.country %>" type="text"    class="form-control" required>
            <div class="invalid-feedback">enter country name</div>
        
        </div>
        <div class="mb-3">
            <label for="image" class="form-lebel">Image</label>
            <input name="listing[image]" value="<%= listing.image %>" type="text"    class="form-control"  required>
            <div class="invalid-feedback">please enter image url</div>
        
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="Prince" class="form-lebel">Price</label>
            <input name="listing[price]" value="<%= listing.price %>" type="number"    class="form-control" required>
            <div class="invalid-feedback">Price apko hi decide krna h</div>
        
        </div>
        <div class="mb-3 col-md-3">
            <label for="location" class="form-lebel">Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text"    class="form-control"  required>
            <div class="invalid-feedback">Arr location to dala hi nhi</div>
        
        </div>
    </div>
       <div class="mb-3">
        <label for="title" class="form-lebel">Discription</label>

        <textarea name="listing[description]"    class="form-control"><%= listing.description %></textarea  required >
            <div class="valid-feedback">please enter discription</div>
       </div>
        <button class=" btn add-btn mt-3">Edit</button>
    </form>
</div>
</div>