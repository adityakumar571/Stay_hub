<%layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  class=" needs-validation" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="title" class="form-lebel">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title="
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks goods! </div>

      </div>
      <div class="mb-3">
        <label for="country" class="form-lebel">Country</label>
        <input
          name="listing[country]"
          placeholder="enter country"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-lebel">Upload  Image</label>
        <input
          name="listing[image]"
          placeholder="enter image url"
          type="file"
          class="form-control"
          required
        />
        <div class="invalid-feedback">required image </div>
      </div>

      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-lebel">Price</label>
        <input
          name="listing[price]"
          placeholder="1200"
          type="text"
          class="form-control"

          required
        />
        <div class="invalid-feedback">please enter price </div>
      </div>
      <div class="mb-3 col-md-3">
        <label for="location" class="form-lebel">Location</label>
        <input
          name="listing[location]"
          placeholder="Lucknow"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">please enter your location</div>
      </div>

      <div class="mb-3">
        <label for="discription" class="form-lebel">Discription</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">please enter discription</div>
      </div>
      
    </div>
      <button class="btn btn-dark  add-btn">Add</button>
    </form>
  </div>
</div>
